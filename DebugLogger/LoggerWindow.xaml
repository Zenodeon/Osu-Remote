<Window x:Class="DebugLogger.LoggerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DebugLogger"
        mc:Ignorable="d"
        Title="LoggerWindow" Height="300" Width="700"
        Background="#1c1c1c"
        WindowStartupLocation="Manual" Top="540" Left="1100"
        SizeChanged="Window_SizeChanged"
        >
    <Grid>
        <Button Content="Clear" Height="20" VerticalAlignment="Bottom" Width="auto" Background="#2d2d30" Foreground="White" BorderThickness="0" Click="Button_Click"/>
        <ListBox Name="LogList" Height="auto" Width="auto" Margin="0 0 0 20" Background="#1c1c1c" BorderThickness="0" 
                 ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 />


    </Grid>
</Window>
